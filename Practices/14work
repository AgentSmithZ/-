#include <math.h>
#include <iostream>
using namespace std;

int main() 
{
    float x, y;
    cout<<"Введите X: ";
    cin>>x;
    if (x<0)
    {
        y=x*x+1;
        cout<<y;
    }
    else
    {
        if(x>=1)
        {
            y=4*x-1;
            cout<<y;
        }
        else
        {
            y=2*x+1;
            cout<<y;
        }
    }

    return 0;
}
